<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_detail_footer"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/custom_theme_darker">

    <ViewSwitcher
        android:id="@+id/news_detail_foot_viewswitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/news_detail_foot_com"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/reply_editbox_bg"
                />

            <ImageView
                android:id="@+id/news_detail_foot_detail"
                style="@style/main_footbar_image"
                android:src="@mipmap/widget_bar_detail_nor"
                 />
            <ImageView
               android:id="@+id/news_detail_foot_comlist"
                style="@style/main_footbar_image"
                android:src="@mipmap/widget_bar_comment_nor"/>
            <ImageView
               android:id="@+id/news_detail_foot_share"
                style="@style/main_footbar_image"
                android:src="@mipmap/widget_bar_share_nor"/>



        </LinearLayout>

    </ViewSwitcher>

</LinearLayout>
