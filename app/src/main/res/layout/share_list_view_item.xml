<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"

    >
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/share_list_view_item_me"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="vertical">
            <TextView
                android:gravity="top"
                android:id="@+id/share_list_view_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="坏男人日志"
                android:textColor="@color/red"
                />

            <TextView
                android:id="@+id/share_list_view_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="1小时前"
                />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_margin="5dp"
        android:id="@+id/share_list_view_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="失望并不可怕，怕的是心存侥幸不够彻底绝望。"/>

    <ImageView
        android:layout_gravity="left"
        android:layout_margin="5dp"
        android:id="@+id/share_list_view_item_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/login_bg"/>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="5dp"
            android:id="@+id/share_list_view_item_bottom_share"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/share_list_view_item_bottom_one"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_launcher"/>
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/share_list_view_item_bottom_one_text"
                android:layout_toRightOf="@id/share_list_view_item_bottom_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转发"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="5dp"
            android:id="@+id/share_list_view_item_bottom_comment"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/share_list_view_item_bottom_two"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_launcher"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/share_list_view_item_bottom_two"
                android:id="@+id/share_list_view_item_bottom_two_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="5dp"
            android:id="@+id/share_list_view_item_bottom_love"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/share_list_view_item_bottom_three"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_launcher"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/share_list_view_item_bottom_three"
                android:id="@+id/share_list_view_item_bottom_three_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
